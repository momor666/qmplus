{{!
    @template theme_qmul/coursebox
}}
<div class="mycoursebox card">
    <div class="card-block header">
        <div class="title">
            <h3 class="m-0 pb-1">{{name}}</h3>
        </div>
        <div class="background">
            <div class="image" {{#hasimage}}style="background-image: url('{{image}}')"{{/hasimage}}></div>
        </div>
        <div class="teachers mb-1">
            {{#teachers}}
                <div class="teachericon d-inline-block">
                    <img class="teacher rounded-circle" src="{{src}}" data-toggle="tooltip" data-placement="bottom" title="{{name}}"/>
                </div>
            {{/teachers}}
        </div>
    </div>
    <div class="info clearfix card-block">
        <div class="summary">{{{summary}}}</div>
    </div>
    <div class="card-img-bottom">
        <div class="courseprogress col-12">
            {{{progressbar}}}
            <div class="activityprogress">
                {{{activityprogress}}}
            </div>
        </div>
    </div>
    <div class="card-footer text-center footer">
        <a href="{{url}}" class="btn btn-info pull-right">{{#str}}access, theme_qmul{{/str}}</a>
    </div>
</div>