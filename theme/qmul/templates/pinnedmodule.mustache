{{!
    @template theme_qmul/pinnedmodule
}}
<div class="col-12 col-lg-6 col-xl-4 modulebox" data-userid="{{userid}}" data-state="1" data-courseid="{{id}}">
    <a href="{{url}}" class="card pinnedmodule module mb-1 text-white {{#invisible}}notvisible{{/invisible}} {{#overviewfile}}hasimage{{/overviewfile}}" {{#overviewfile}}style="background-image: url('{{overviewfile}}')"{{/overviewfile}}>
        <div class="info">
            <h5 class="name text-white">{{fullname}}</h5>
            <h6 class="category">{{categoryname}}</h6>
            {{#warning}}
                <div class="mt-12 warning card bg-warning card-block p-12">
                    <small>
                    {{{warning}}}
                    </small>
                </div>
            {{/warning}}
        </div>
    </a>
    <a href="#" class="pincourse pinned"></a>
</div>