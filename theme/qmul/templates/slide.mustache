{{!
    @template theme_qmul/slide
}}
<div data-number={{number}} class="slide" style="background-image: url('{{image}}')">
    {{#hasurl}}
        <a target="_blank" href="{{url}}">{{url}}</a>
    {{/hasurl}}
</div>
{{#hascaption}}
    <div class="carousel-caption hidden-sm-down {{#first}}active{{/first}}" data-slide="{{number}}">
        <div class="caption-wrap">{{{caption}}}</div>
        {{#hasurl}}
        <div class="button-wrap"><a class="btn btn-primary" target="_blank" href="{{url}}">{{slidebutton}}</a></div>
        {{/hasurl}}
    </div>
{{/hascaption}}