{{!
    @template theme_qmul/coursebox
}}
<div class="lastcourse card">
    <div class="info clearfix card-block">
        <h3 class='card-title'>{{#str}}lastcourseaccessed, theme_qmul{{/str}}</h3>
        <div class="row">
            <div class="col-md-3 mb-1">
                <div class="image rounded" {{#hasimage}}style="background-image: url('{{image}}')"{{/hasimage}}>
                    <div class="lastaccess text-center text-white bg-inverse">{{lastaccess}}</div>
                </div>
                <div class="teachers">
                    {{#teachers}}
                        <div class="teachericon d-inline-block">
                            <img class="teacher rounded-circle" src="{{src}}" data-toggle="tooltip" data-placement="bottom" title="{{name}}"/>
                        </div>
                    {{/teachers}}
                </div>
            </div>
            <div class="col-md-9 d-flex flex-wrap">
                <h4 class="name col-12 text-primary">{{name}}</h4>
                <div class="courseprogress col-12">{{{progressbar}}}</div>
                <div class="activityprogress col-8 d-flex">
                    <div class="text">
                        {{{activityprogress}}}
                    </div>
                </div>
                <div class="button d-flex resume col-4">
                    <a href="{{url}}" class="btn btn-info">{{#str}}resume, theme_qmul{{/str}}</a>
                </div>
            </div>
        </div>
    </div>
</div>