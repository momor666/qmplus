{{!
    Setting.
}}
<div class="form-item row border-0" id="{{id}}">
    <div class="card">
        <div class="form-label-wrap card-header">
            <span class="helpbutton">
                <a class="btn btn-link" role="button"
                data-container="body" data-toggle="popover"
                data-title="{{alt}}"
                data-placement="right" data-content="{{description}}"
                data-html="true" tabindex="0" data-trigger="focus">
                {{#pix}}help, core, {{alt}}{{/pix}}
                </a>
            </span>
            <label class="card-title" {{#labelfor}}for="{{labelfor}}"{{/labelfor}}>
                {{{title}}}
                {{#override}}
                    <div class="form-overridden">{{override}}</div>
                {{/override}}
                {{#warning}}
                    <div class="form-warning">{{warning}}</div>
                {{/warning}}
            </label>
        </div>
        <div class="form-setting card-block border-0">
            {{#error}}
                <div><span class="error">{{error}}</span></div>
            {{/error}}
            {{{element}}}
            {{#description}}
            {{/description}}
            {{#default}}
            <div class="form-defaultinfo text-muted {{#forceltr}}text-ltr{{/forceltr}}">{{{default}}}</div>
            {{/default}}
        </div>
    </div>
</div>
