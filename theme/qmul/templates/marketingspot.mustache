<div class="marketingspot card border-0 p-0 mb-2 {{class}}">
    <div class="card-header">
        <h5 class="card-title mb-0">{{title}}</h5>
    </div>
    <div class="card-block p-0">

        {{#hasimage}}
        <div class="marketing-image" style="background-image: url('{{ image }}')" ></div>
        {{/hasimage}}

        {{#hascontent}}
        <div class="content">
            {{{content}}}
        </div>
        {{/hascontent}}

    </div>
    <div class="card-footer pt-0 border-top-0 text-center">
        <hr class="mt-0">
        {{#hasbutton}}
            <a href="{{ url }}" class="btn btn-primary">{{buttontext}}</a>
        {{/hasbutton}}
    </div>
</div>