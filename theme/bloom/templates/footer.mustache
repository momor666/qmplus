<footer id="page-footer" class="bg-inverse">
    <div class="container-fluid">
        <div class="footer-row">
            <div class="footer-cols card">
                <div class="card-block">
                    {{# output.show_footnotes }}
                        {{{ output.show_footnotes }}}
                    {{/ output.show_footnotes }}
                </div>
            </div>
            <div class="footer-cols card">
                <div class="card-block">
                    {{# output.show_socialmedialinks }}
                        {{{ output.show_socialmedialinks }}}
                    {{/ output.show_socialmedialinks }}
                </div>
                <div class="card-block">
                    {{# output.footer_links }}
                        <div class="card-text">
                            <nav class="nav navbar-nav footerlinks">  
                                <ul class="nav">
                                    {{> theme_bloom/custom_menu_footer }}
                                </ul>                               
                            </nav>
                        </div>
                    {{/ output.footer_links }}
                </div>
            </div>
        </div>

        <div class="footer-row">
            <div id="course-footer">{{{ output.course_footer }}}</div>

            {{# output.page_doc_link }}
                <p class="helplink">{{{ output.page_doc_link }}}</p>
            {{/ output.page_doc_link }}

            <nav class="nav navbar-nav hidden-lg-up flatmenu">                    
                {{# output.custom_menu_flat }}
                    <div class="card">
                        <div class="card-block">
                            <ul class="nav">
                                {{> theme_bloom/custom_menu_footer }}
                            </ul>
                        </div>
                    </div>
                {{/ output.custom_menu_flat }}
            </nav>
        </div>

        {{{ output.standard_footer_html }}}
        {{{ output.standard_end_of_body_html }}}
    </div>
</footer>

